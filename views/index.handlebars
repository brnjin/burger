<div class="container">
    
    <div class="row">
        <h1 class="text-center"> Burger time!! </h1>
<!--         <img  class="img-center center-block" src="/assets/img/burger.jpg" width="200"> -->
    </div>

    <div class="row">
        <div class='text-center'>
            <p> Click to eat burger </p>
        </div>
    </div>


  <div class ="row">
    <div class = "col-md-6">
      <h2>Burgers to eat</h2>
      <ol>
        {{#each burgers}}
          {{#unless this.devoured}}
          <li>
            <p><span class="label"></span> {{this.burger_name}} <button id="to-Eat" data-id="{{this.ID}}" class="btn btn-primary btn-space">Devour Burger</button></p>
            
          </li>
            {{/unless}}
          {{/each}}
            
      </ol>
    </div>

    <div class = "col-md-6">
      <h2>Burger Devoured</h2>
      <ol>
        {{#each burgers}}
          {{#if this.devoured}}
          <li>
            <p><span class="label"></span> {{this.id}}</p>
            <p><span class="label"></span> {{this.burger_name}}</p>
          </li>
            {{/if}}
          {{/each}}
            
      </ol>
    </div>
  </div>
      <div class="row">   
        <div class="form-group text-center col-md-6 col-md-offset-3">
            <label for="nameOfNewBurger"></label>
            <textarea class="form-control input-sm " rows="5" id="nameOfNewBurger"></textarea>
        </div>
    </div>
    <div class="row">
        <div class="text-center">
            <button type="button" class="btn btn-primary" id="submit">Submit</button>
        </div>
    </div>
</div>